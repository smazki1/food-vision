{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "loveable-monorepo/landing/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd loveable-monorepo/landing && npm install && npm run build",
        "outputDirectory": "loveable-monorepo/landing/dist"
      }
    },
    {
      "src": "loveable-monorepo/form/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd loveable-monorepo/form && npm install && npm run build",
        "outputDirectory": "loveable-monorepo/form/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/form/(.*)",
      "dest": "/loveable-monorepo/form/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/loveable-monorepo/landing/dist/$1"
    }
  ]
} 